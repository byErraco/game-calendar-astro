---
const {game} = Astro.props
const {id,slug,name,released,rating,rating_top, platforms,genres,background_image,short_screenshots} = game
console.log('short_screenshots',short_screenshots);
const altImg = short_screenshots.length ? short_screenshots[0].image : 'no game picture'
console.log('alt',altImg);

---

<article class="">
    <a href="#" class="group relative block bg-black">
        <img
          src={background_image}
          alt={name}
          onerror={altImg}

          class="absolute inset-0 h-full w-full object-cover opacity-75 transition-opacity group-hover:opacity-50"
        />
      
        <div class="relative flex flex-col p-4 sm:p-6 lg:p-8 min-h-[270px]">
     
          <!-- <p class="text-sm font-medium uppercase tracking-widest text-blue-600 dark:text-blue-500">
            Developer
          </p> -->
          <!-- bg-blue-100 dark:bg-blue-900 -->
          <p class="text-xl font-bold text-white sm:text-2xl">{name}</p>
          <div class="flex flex-row flex-wrap mt-3  ">
            {genres.map(genre => <span class="m-[5px_0] bg-blue-100 text-blue-800 text-xs font-medium mr-2 px-2.5 py-0.5 rounded dark:bg-blue-900 dark:text-blue-300">{genre.name}</span>)}
        </div>
        <div class="flex flex-row flex-wrap self-end mt-[auto]  ">
            {platforms.map(pl =>
                <span class={`${pl.platform.slug}-badge text-xs font-medium mr-2 px-2.5 py-0.5 rounded   mt-3`}>{pl.platform.name}</span>
            )}
            </div>
          <!-- <div class="mt-16 sm:mt-24 lg:mt-32">
            <div
              class="translate-y-8 transform opacity-0 transition-all group-hover:translate-y-0 group-hover:opacity-100"
            >
              <p class="text-sm text-white">
                Lorem ipsum dolor, sit amet consectetur adipisicing elit. Omnis
                perferendis hic asperiores quibusdam quidem voluptates doloremque
                reiciendis nostrum harum. Repudiandae?
              </p>
            </div>
          </div> -->
        </div>
      </a>
</article>
<style>
    .pc-badge{
        background-color: #00A1F1;
        color: white;
    }
    .playstation5-badge{
        background-color: #ffff;
        color: #043290;
    }
    .playstation4-badge{
        background-color: #124cb7;
        color: white;
    }
    .xbox-one-badge{
        background-color: #55af4b;
        color: white;
    }
    .nintendo-switch-badge{
        background-color: #d43a52;
        color: white;
    }
    .xbox-series-x-badge{
        background-color: #abe940;
        color: #000a00;
    }
    .ios-badge,.macos-badge{
        background-color: white;
        color: #000a00;
    }
</style>

